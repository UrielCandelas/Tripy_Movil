{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
        "eslint-config-prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "camelcase": "off",
        "eqeqeq": "off",
        "arr-callback-return": "off",
        "spaced-comment": "warn",
        "react/prop-types": "off",
        "space-before-function-paren": "off",
        "react/react-in-jsx-scope": "off"
    }
}
